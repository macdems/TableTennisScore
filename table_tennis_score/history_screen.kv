#:import history_screen table_tennis_score.history_screen

<GameListItem>:
    markup: True
    secondary_font_style: 'Caption'
    tertiary_font_style: 'Caption'


<HistoryScreen>:
    MDBoxLayout:
        orientation: 'vertical'
