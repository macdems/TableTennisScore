#:import MDToolbar kivymd.uix.toolbar.MDToolbar

#:import widgets table_tennis_score.widgets


<MainToolbar@MDToolbar>:
    title: t.title
    left_action_items: [["menu", lambda *args: app.root.ids.nav_drawer.set_state("open")]]
    # right_action_items: [["dots-vertical", lambda x: x]]


<IconMenuItem>:
    icon_color: app.theme_cls.text_color
    IconLeftWidget:
        icon: root.icon
        text_color: root.icon_color
        theme_text_color: 'Custom'
        on_release: root.on_release(args)


<ComboListItem>:
    size_hint: 1, None
    secondary_font_style: 'Body2'


<IconComboListItem>:
    size_hint: 1, None
    icon_color: app.theme_cls.text_color
    secondary_font_style: 'Body2'
    IconLeftWidget:
        id: left_icon
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: root.icon_color
        on_release: root.on_release(*args)


<BooleanListItemCheckbox@MDCheckbox+IRightBodyTouch>:

<BooleanListItem>:
    on_release: checkbox.state = 'down' if checkbox.state == 'normal' else 'normal'
    BooleanListItemCheckbox:
        id: checkbox
        on_state: root.save_value(args[1] == 'down')
